{
  "compilerOptions": {
    "target": "es6",                               
    "module": "commonjs",                           
    "outDir": "./dist",                             
    "rootDir": "./server",                             
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "noImplicitAny": false,
    "removeComments": true,
    "experimentalDecorators": true,
    "paths": {
      "~/*": ["./server/*"]
    },
    "types": ["node", "@types/node"]
  },
  "exclude": ["node_modules", "dist"]
}
